@using session5demo.pl.ViewModels.Employeeupdatevm
@model Employeeupdatevm
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Employee</h1>
    <form method="post" asp-controller="Employee" asp-action="Edit" class="row col-8" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <partial name="add_edit" model="@Model" />
        <input asp-for="@Model.filename" hidden class="form-control" readonly />

        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Save" />
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>

@section validate{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}